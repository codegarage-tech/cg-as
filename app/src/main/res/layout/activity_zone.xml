<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar_menu" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight=".80"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_pst"
                    android:layout_width="0dp"
                    android:layout_height="270dp"
                    android:layout_weight=".16"
                    android:background="@drawable/ic_map_pst"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_mst"
                    android:layout_width="0dp"
                    android:layout_height="270dp"
                    android:layout_weight=".16"
                    android:background="@drawable/ic_map_mst"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_cst"
                    android:layout_width="0dp"
                    android:layout_height="270dp"
                    android:layout_weight=".16"
                    android:background="@drawable/ic_map_cst"
                    android:orientation="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_est"
                    android:layout_width="0dp"
                    android:layout_height="270dp"
                    android:layout_weight=".30"
                    android:background="@drawable/ic_map_est"
                    android:orientation="vertical">

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".20"
                android:gravity="top|center">

                <com.taishi.library.Indicator
                    android:id="@+id/indicator"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:bar_num="40"
                    app:bar_color="@color/colorPrimaryDark"
                    app:step_num="60"
                    app:duration="20000"
                    android:background="@android:color/white"/>

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>